= javascript_include_tag "map_builder"
= stylesheet_link_tag "map_builder"

#place
  .left_content
    .mini_title
      %h1 Map Editor: #{@map.title}
      %h1 created by Anonymous
    #map_builder
      .grid
      .data= @map.to_json
      = form_for(@map) do |f|
        = text_area_tag :map_builder_data
        %p
          = f.label :height
          = f.text_field :height
          %br
          = f.label :width
          = f.text_field :width
        = f.submit
      